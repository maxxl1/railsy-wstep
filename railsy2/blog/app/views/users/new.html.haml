.header
  .container
    %a{:href => "/"}
      = image_tag "logo.png"
.container_panel
  .panel
    - if logged_in?
      %p
        Zalogowany jako: #{User.find(session[:user_id]).nick}
        |
        \#{link_to "Pokaż profil", User.find(session[:user_id]), class: 'link'} |
        \#{link_to "Logout", logout_path, method: "delete", class: 'link'}
    - else
      = link_to "Zaloguj się", '/sessions/new', class: 'link'
.reg
  .container
    = form_for(@user) do |f|
      .reg
        = f.label :nick
        = f.text_field :nick
        = f.label :email
        = f.email_field :email
        = f.label :password
        = f.password_field :password
        = f.label :password_confirmation, "Powtórz hasło"
        = f.password_field :password_confirmation
        .actions
          = f.submit "Rejestruj"
