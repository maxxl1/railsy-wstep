.header
  .container
    %a{:href => "/"}
      = image_tag "logo.png"
.container_panel
  .panel
    - if logged_in?
      %p
        Zalogowany jako: #{User.find(session[:user_id]).nick}
        |
        \#{link_to "Pokaż profil", User.find(session[:user_id]), class: 'link'} |
        \#{link_to "Logout", logout_path, method: "delete", class: 'link'}
    - else
      = link_to "Zaloguj się", '/sessions/new', class: 'link'
- if logged_in?
  .create
    .container
      = form_for(@message) do |f|
        .field
          = f.label :Post
          %br/
          = f.text_area :content
        .actions
          = f.submit "Aktualizuj"
      - else
        Tylko zalogowani użytkownicy mogą edytować posty
